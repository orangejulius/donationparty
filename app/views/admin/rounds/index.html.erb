<h1>Listing rounds</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Charity</th>
    <th>Expire time</th>
    <th>Closed</th>
    <th>Max amount</th>
    <th>Secret token</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rounds.each do |round| %>
  <tr>
    <td><%= round.url %></td>
    <td><%= round.charity %></td>
    <td><%= round.expire_time %></td>
    <td><%= round.closed %></td>
    <td><%= round.max_amount %></td>
    <td><%= round.secret_token %></td>
    <td><%= link_to 'Show', [:admin, round] %></td>
    <td><%= link_to 'Edit', edit_admin_round_path(round) %></td>
    <td><%= link_to 'Destroy', [:admin, round], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

