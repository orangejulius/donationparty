<% @charities.each do |charity| %>
  <tr>
    <td><%= charity.name %></td>
    <td><%= charity.image_name %></td>
    <td><%= link_to 'Show', [:admin, charity] %></td>
    <td><%= link_to 'Edit', edit_admin_charity_path(charity) %></td>
