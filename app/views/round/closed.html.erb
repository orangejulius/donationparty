<% if @round.failed? %>
<div class="boxed lead running">
    <img src="<%= asset_path @round.charity.image_name %>" />
    <h2>The Party is Over</h2>
    <p class="lead">Unfortunately not enough people joined this party for it to succeed. <strong>No money will be deducted or donated</strong>. You can always start another party and share the link!</p>
</div>
<% else %>
<div class="boxed lead running">
    <img src="<%= asset_path @round.charity.image_name %>" />
    <h2><%= number_to_currency(@round.total_raised) %> Donated to <%= @round.charity.name %>!</h2>
    <p class="lead">Give yourselves a huge pat on the back. <%= @round.winner.name %> won with a random donation of <strong><%= number_to_currency(@round.winner.amount) %></strong> and will receive something frickin' awesome in the mail soon!</p>
</div>
<% end %>

<div class="row-fluid">
    <div class="span5 boxed finish-info">
        <% if @winner %>
          <%= render 'shipping_form' %>
        <% else %>
            <p>Start your own party to collect donations for charity and have the chance to win something niiice.</p>

            <div class="create">
                <a href="/" class="btn btn-large btn-success">Create a Party!</a>
            </div>
        <% end %>
    </div>
    <div class="span7">
        <ol class="donations <% if @round.failed? %>failed<% end %>">
            <%= render 'donations' %>
        </ol>
    </div>
</div>
